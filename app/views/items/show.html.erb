<p><a href="/items">Back</a></p>
<h2><%= @item.name %></h2>

<p>Item Creator: <%= @item.user.first_name %> <%= @item.user.last_name %></p>
<p>Creator Email: <%= @item.user.email %></p>

<p>People who also wished for this: <%= @item.wishers.count %></p>
<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Date of Birth</th>
	</tr>
	<% @item.wishers.each do |person| %>
	<tr>
		<td><%= person.first_name %> <%= person.last_name %></td>
		<td><%= person.email %></td>
		<td><%= person.dob %></td>
	</tr>
	<% end %>
</table>
